<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.DashboardFragment">

    <TextView
        android:id="@+id/dash_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/stampsOfRus"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:gravity="center"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="@font/comfortaa_medium"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/ri_btn"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:background="@drawable/btns"
        android:maxWidth="80dp"
        android:maxHeight="80dp"
        android:paddingBottom="45dp"
        android:paddingTop="15dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ri_preview"
        android:foregroundGravity="center"
        app:layout_constraintTop_toBottomOf="@id/dash_title"
        android:layout_marginTop="20dp"
        android:layout_marginStart="110dp"
        android:layout_marginEnd="110dp"
        app:layout_constraintWidth_percent="0.47"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/ri_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/RI"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:gravity="center"
        android:paddingBottom="3dp"
        android:fontFamily="@font/comfortaa_medium"
        app:layout_constraintBottom_toBottomOf="@id/ri_btn"/>

    <ImageButton
        android:id="@+id/rsfsr_btn"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:background="@drawable/btns"
        android:maxWidth="80dp"
        android:maxHeight="80dp"
        android:paddingBottom="45dp"
        android:paddingTop="15dp"
        android:scaleType="fitCenter"
        android:src="@drawable/rsfsr_preview"
        android:foregroundGravity="center"
        app:layout_constraintTop_toBottomOf="@id/ri_btn"
        android:layout_marginTop="20dp"
        android:layout_marginStart="110dp"
        android:layout_marginEnd="110dp"
        app:layout_constraintWidth_percent="0.47"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/rsfsr_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/RSFSR"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:gravity="center"
        android:paddingBottom="3dp"
        android:fontFamily="@font/comfortaa_medium"
        app:layout_constraintBottom_toBottomOf="@id/rsfsr_btn"/>
</androidx.constraintlayout.widget.ConstraintLayout>